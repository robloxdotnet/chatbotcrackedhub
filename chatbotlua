-- Login function modification for debug mode
local function login(key)
	OrionLib:MakeNotification{
		Name = "Debug Mode",
		Content = "Logged in as debug user.\nYou have unlimited points.",
		Image = "rbxassetid://7115671043",
		Time = 3
	}
	_G.CHATBOTHUB_LOGIN = true
	_G.CHATBOTHUB_CREDITS = 9999  -- Debug: Ensure credits remain high
	_G.CHATBOTHUB_PREMIUM = true  -- Debug: Ensure premium is always on
	updateCredits()
	updatePremium()
	return true
end

-- The rest of the script remains unchanged

-- Override the reset functions in debug mode for safe testing
resetTogglePrem = function()
	doCallbackPrem = false
	CustomToggle:Set(true)  -- Keep custom prompt enabled
	wait(0.3)
	doCallbackPrem = true
end

resetToggleTTA = function()
	doCallbackTTA = false
	TTAToggle:Set(true)  -- Keep TTA enabled
	wait(0.3)
	doCallbackTTA = true
end

